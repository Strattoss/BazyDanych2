<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="derby"
    transaction-type="RESOURCE_LOCAL">
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:derby://localhost/MyDatabase"/>

            <property name="dialect" value="org.hibernate.dialect.DerbyDialect"/>
            <property name="show_sql" value="true"/>
            <property name="format_sql" value="true"/>
            <property name="use_sql_comments" value="true"/>
            <property name="hbm2ddl.auto" value="create"/>

        </properties>
    </persistence-unit>

</persistence>
